generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Guild {
  id        String   @id // Discord guild ID
  name      String
  iconUrl   String?
  prefix    String   @default("!")
  volume    Int      @default(80)
  djRoleId  String?  // Role ID that can control the bot

  playlists Playlist[]
  settings  GuildSettings?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GuildSettings {
  id                String  @id @default(cuid())
  guildId           String  @unique
  guild             Guild   @relation(fields: [guildId], references: [id], onDelete: Cascade)

  announceNowPlaying Boolean @default(true)
  defaultRepeatMode  String  @default("off") // off, track, queue
  maxQueueSize       Int     @default(100)
  allowDuplicates    Boolean @default(true)
  autoPlay           Boolean @default(true)
  twentyFourSeven    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Playlist {
  id          String         @id @default(cuid())
  name        String
  description String?
  isPublic    Boolean        @default(false)

  guildId     String?
  guild       Guild?         @relation(fields: [guildId], references: [id], onDelete: Cascade)

  userId      String         // Discord user ID

  tracks      PlaylistTrack[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userId])
  @@index([guildId])
}

model PlaylistTrack {
  id         String   @id @default(cuid())
  playlistId String
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  title      String
  author     String
  duration   Int      // milliseconds
  uri        String
  artworkUrl String?
  sourceName String
  position   Int

  createdAt  DateTime @default(now())

  @@index([playlistId])
}

model UserEngagement {
  id               String    @id // Discord user ID (global per-user)
  interactionCount Int       @default(0)
  totalVoiceTime   Int       @default(0) // cumulative seconds in VC with bot
  promoSent        Boolean   @default(false)
  promoSentAt      DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserPreference {
  id     String @id // Discord user ID

  theme  String @default("dark") // dark, light
  locale String @default("en")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserGuildCache {
  userId     String
  guildId    String
  guildName  String
  guildIcon  String?
  botPresent Boolean @default(false)
  canManage  Boolean @default(false)

  cachedAt   DateTime @default(now())

  @@id([userId, guildId])
  @@index([userId])
}

model TrackPlay {
  id         String   @id @default(cuid())
  guildId    String
  userId     String
  username   String

  title      String
  author     String
  uri        String
  sourceName String
  duration   Int      // track duration in ms

  playedAt   DateTime @default(now())

  @@index([guildId])
  @@index([guildId, userId])
  @@index([guildId, title, author])
}

model ListeningSession {
  id           String    @id @default(cuid())
  guildId      String
  tracksPlayed Int       @default(0)

  startedAt    DateTime  @default(now())
  endedAt      DateTime?

  @@index([guildId])
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  username  String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([read])
}
